<style>
  .game-body {
    min-width: 100vw;
    min-height: 100vh;
    background-color: #0f0f0f;
    background-image: url("https://media.rawg.io/media/games/b72/b7233d5d5b1e75e86bb860ccc7aeca85.jpg")
  }

  .gamebox {
    color: #FFF;
    margin: 10px, 35px;
    border: 1px solid #0f0f0f;
    border-top: 10px solid #0f0f0f;
    background: rgba(0, 0, 0, 0.6) !important;
  }

  h4 {
    font-family: 'Press Start 2P', cursive;
    color: #0f0f0f;
  }

  textarea {
    color: #FFF;
    background: transparent !important;
  }
</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark playbook-title">
  <h1>The Playbook</h1>
</nav>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark playbook-nav">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/main">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/allgames">Games</a>
        </li>
    </div>
  </div>
</nav>
<div class="game-header">
  <h3>{{game.name}} (
    {{#each game.genres}}
    {{this}}
    {{/each}}
    )
  </h3>
  <h5>Release Date: {{game.releaseDate}}</h5>
  <h5>Hype: {{game.hype}}</h5>
</div>
<div class="game-body">
  <div id="wrapper">
    <div id="content-wrapper">
      <div id="content">
        <div class="row">
          <div class="col-md-9 col-sm-12">
            <div class="gamebox">
              <textarea id="comment" cols="35" style="resize: none;"></textarea>
              <button id="create-comment" class="btn btn-success" data-game-id="{{game.id}}" type="button">Add
                Comment</button>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-9 col-sm-12">
            <h4>Comments</h4>
            {{#each game.comments}}
            <div class="form-inline gamebox">
              <div>
                <dt>{{this.userName}}</dt>
                <dd>
                  <textarea data-id="{{this.id}}" cols="35" style="resize: none;" readonly>
            {{this.comment}}
              </textarea>
                </dd>
              </div>
              <div>
                {{#if this.canUpdate}}
                <button data-id="{{this.id}}" data-state="update" type="button"
                  class="edit-comment btn btn-warning">Update</button>&nbsp
                <button data-id="{{this.id}}" type="button" class="delete-comment btn btn-danger">Delete</button>
                {{/if}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="footer">
  <p> <a href="#">Terms of Service</a> | <a href="#">Privacy</a> | <a href="#">Contact</a> | <a href="#">About</a> |</p>
</div>